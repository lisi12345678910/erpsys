<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--命名空间-->
<mapper namespace="com.zte.login.dao.ILoginDao">

    <!--eviction: 缓存策略-->
    <!--FIFO：先进先出-->
    <!--LRU ：最近最少使用-->
    <!--SOFT：软引用-->
    <!--WEAK：弱引用-->
    <cache eviction="LRU" flushInterval="60000"
           size="512" readOnly="true"/>

    <select id="queryUserByCondition" resultType="loginUser" parameterType="loginUserCondition">
        <![CDATA[
            select
                u.U_ID,
                u.UNAME,
                u.UPASSWORD,
                u.UTELEPHONE,
                u.JOB_ID,
                u.SEX,
                u.STATUS_ID,
                u.HIREDATE,
                u.LEAVEDATE,
                u.BIRTHDAY,
                u.DEPT_ID
            from users u where 1=1
        ]]>
         <if test="uname!=null and uname!=''">
            <![CDATA[and UNAME = #{uname} ]]>
        </if>
        <if test="upassword!=null and upassword!=''">
            <![CDATA[and UPASSWORD = #{upassword} ]]>
        </if>
    </select>

    <select id="queryPermissionByJob" resultType="module" parameterType="loginUser">
        <![CDATA[
            select
                m.MODULE_ID,
                m.MODULE_RNAME,
                m.MODULE_PID,
                m.MODULE_MURL,
                m.MODULE_STATE
            from module m left join permission p
                on p.COMPID = m.MODULE_ID
            where 1=1
              and m.MODULE_STATE = 0
              and p.COMSTATE = 0
        ]]>
        <if test="jobId!=null and jobId!=''">
            <![CDATA[ and COMRID = #{jobId} ]]>
        </if>
    </select>

</mapper>