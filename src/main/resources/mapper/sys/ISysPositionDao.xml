<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zte.sys.dao.ISysPositionDao">
    <cache>
    </cache>

    <select id="positionlist" resultType="com.zte.sys.model.Job">
        select * from job,dept where job.JOB_DEPT_ID = dept.DEPT_ID
        <if test="jobName != null and jobName != ''">
            and job.JOB_NAME = #{jobName}
        </if>
        <if test="jobDeptId != null">
            and job.JOB_DEPT_ID = #{jobDeptId}
        </if>
    </select>
</mapper>